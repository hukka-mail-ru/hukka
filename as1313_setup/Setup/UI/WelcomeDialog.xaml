<Window x:Class="Setup.UI.WelcomeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Margin="3">Welcome to AS1313 Client Installator</Label>
        </Grid>

        <Grid Grid.Row="1">
            <WrapPanel>
                <Button Width="50" Margin="3" Name="CancelButton" Click="CancelButton_Click">_Cancel</Button>
                <Button Width="50" Margin="3" Name="NextButton" Click="NextButton_Click">_Next</Button>
            </WrapPanel>
        </Grid>
        

    </Grid>
</Window>
