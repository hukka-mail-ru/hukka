<Window x:Class="Setup.UI.ReadyToInstallDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ready to Install" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Margin="3">Click Install to begin the installation</Label>
        </Grid>

        <Grid Grid.Row="1">
            <WrapPanel>
                <Button Width="50" Margin="3" Name="BackButton" Click="BackButton_Click">_Back</Button>
                <Button Width="50" Margin="3" Name="InstallButton" Click="InstallButton_Click">_Install</Button>
                <Button Width="50" Margin="3" Name="CancelButton" Click="CancelButton_Click">_Cancel</Button>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
