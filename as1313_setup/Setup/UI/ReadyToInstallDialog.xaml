<Window x:Class="Setup.UI.ReadyToInstallDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Install Wizard" Height="300" Width="500">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Name="HeaderLabel" Grid.Column="1" Margin="0,3,3,3" FontSize="18" >Ready to install</Label>
            <Label Name="TextLabel" Grid.Column="1" Margin="0,40,3,3">Click Install to begin the installation.</Label>

        </Grid>

        <Grid Grid.Row="1">
            <WrapPanel Background="Gray">
                <Button Width="80" Margin="3" Name="BackButton" Click="BackButton_Click">_Back</Button>
                <Button Width="80" Margin="3" Name="InstallButton" Click="InstallButton_Click">_Install</Button>
                <Button Width="80" Margin="3" Name="CancelButton" Click="CancelButton_Click">_Cancel</Button>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
